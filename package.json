{
  "name": "grepbase",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "pages:build": "bun x @cloudflare/next-on-pages",
    "pages:preview": "bun run pages:build && wrangler pages dev .vercel/output/static",
    "pages:deploy": "bun run pages:build && wrangler pages deploy .vercel/output/static --branch=main",
    "d1:create": "wrangler d1 create grepbase-db",
    "d1:migrate": "wrangler d1 migrations apply grepbase-db"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.1",
    "@ai-sdk/google": "^3.0.1",
    "@ai-sdk/openai": "^3.0.1",
    "@ai-sdk/openai-compatible": "^2.0.1",
    "@cloudflare/next-on-pages": "^1.13.16",
    "ai": "^6.0.3",
    "axios": "^1.13.2",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "prism-react-renderer": "^2.4.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^4.2.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260101.0",
    "@happy-dom/global-registrator": "^20.0.11",
    "@types/bun": "^1.3.5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "typescript": "^5",
    "wrangler": "^4.54.0"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}